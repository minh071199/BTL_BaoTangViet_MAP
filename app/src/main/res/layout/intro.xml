<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/Thap_Rua"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#3CF8FBFB"
android:textAlignment="center"
tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/Logo_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/bangers"
        android:text="Hanoi's Museum"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/Slogan_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antic"
        android:text="Explore the museum in Hanoi"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo_id"
        android:gravity="center_horizontal" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="362dp"
    android:layout_height="407dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/capture"
    tools:layout_editor_absoluteY="32dp"
    tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>